<tr>
  <td >
    <%= link_to image_tag(layer.thumb), layer_path(layer)%>
  </td>
  <td >
    <span class="layer_title">
      <%= link_to h(layer.name),  layer_path(layer) -%>
    </span>
    <br />
    <span class="layer_description">
      <%= layer.description %>
      <%- if layer.user -%>Compiled by <%= link_to(layer.user.login, user_path(layer.user)) -%>.<%-end-%>
      Last modified <%=h time_ago_in_words(layer.updated_at) -%> ago.
    </span>
    <span class="layer_year">
      <%if layer.depicts_year%>Depicts : <%= layer.depicts_year %> <%end%>
    </span>
    <span class="map_links">
      <%- unless layer.source_uri.blank? -%>
       Links: <%= sanitize(link_to(image_tag("commons_logo-25x25.png", :height => '16')+" Wikimedia Commons",  layer.source_uri), attributes: %w(href height img src)) %>
      <%- end -%>
    </span>

    <% if admin_authorized? -%>
      <div class="layer_visibility">
        <span id="vis-text-<%=layer.id%>">
          <% if layer.is_visible -%>
            (Visible)
          <% else -%>
            (Not Visible)
          <%end-%>
        </span>
        
      <script type="text/javascript">
        jQuery(document).ready(function() {
          jQuery("a#toggle-visibility").bind("ajax:success", function(event, data, status, xhr) {
            jQuery('<%= "#vis-text-#{layer.id}" %>').html(data);
          });
        });
      </script>
       
        <%= link_to("Toggle Visibility", toggle_visibility_layer_path(layer), :id => "toggle-visibility", :remote => true)%>
      </div>
      <% end  %>
    <span class="layer_visibility">
      <% if user_signed_in? && (admin_authorized? or current_user.own_this_layer?(layer.id)) -%>
        <%= link_to "Edit Mosaic", layer_path(:id=>layer, :anchor=>"Edit_tab") -%> |
      <% end -%>
      <% if admin_authorized? -%>
        <%= link_to("Merge", :controller => "layers", :action=> "merge", :id => layer) %> |
       <!-- <%= link_to("Publish", :controller => "layers", :action=> "publish", :id=>layer)%> | -->
      <%end -%>

      <% if layer.is_visible && layer.rectified_maps_count > 0 %>
        <%= link_to("Trace", layer_path(:id=> layer,:anchor=>"Trace_tab")) %> |
        <%= link_to("Download KML", layer_url(:id => layer, :format=>:kml)) %>
      <% end %>

    </span>

  </td>
  <td>
    <span class="layer_mapcount">
      <%= pluralize layer.maps_count,'map' -%>
    </span>
  </td>
  <td>
    <%=number_to_percentage(layer.rectified_percent, :precision=>0) %><br />
    (<%= pluralize layer.rectified_maps_count, 'map'-%>)
  </td>
</tr>
